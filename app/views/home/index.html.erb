<p id="notice"><%= notice %></p>

<h1>HIKAKAKU</h1>

<br>

<%= link_to '商品登録', new_product_path %>

<table>
  <thead>
    <tr>
      <th>最安値</th>
      <th>ストア</th>
      <th>品名</th>
      <th>個数</th>
      <th>平均の合計[円]</th>
      <th>合計[円]</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.lowest == true ? '★' : '' %></td>
        <td><%= product.store %></td>
        <td><%= product.name %></td>
        <td><%= product.quantity %><%= product.unit %></td>
        <td><%= product.avarage_sum_price %></td>
        <td><%= product.sum_price %></td>
        <td><%= link_to '詳細', product %></td>
        <td><%= link_to '編集', edit_product_path(product) %></td>
        <td><%= link_to '削除', product, method: :delete, data: { confirm: '本当に削除してよろしいですか。' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
