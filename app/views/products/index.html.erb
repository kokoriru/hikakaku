<p id="notice"><%= notice %></p>

<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
      <th>最安値</th>
      <th>品名</th>
      <th>数量</th>
      <th>重量[単位]</th>
      <th>税込金額</th>
      <th>税抜金額</th>
      <th>送料</th>
      <th>ポイント</th>
      <th>合計</th>
      <th>ストア</th>
      <th>URL</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.lowest %></td>
        <td><%= product.name %></td>
        <td><%= product.quantity %></td>
        <td><%= product.weight %>[<%= product.unit %>]</td>
        <td><%= product.price %></td>
        <td><%= product.non_taxed_price %></td>
        <td><%= product.shipping_fee %></td>
        <td><%= product.point %></td>
        <td><%= product.sum %></td>
        <td><%= product.store %></td>
        <td><%= product.url %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

