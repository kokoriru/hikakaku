<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Store</th>
      <th>Price</th>
      <th>Non taxed price</th>
      <th>Shipping fee</th>
      <th>Point</th>
      <th>Payment</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.store %></td>
        <td><%= product.price %></td>
        <td><%= product.non_taxed_price %></td>
        <td><%= product.shipping_fee %></td>
        <td><%= product.point %></td>
        <td><%= product.payment %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

