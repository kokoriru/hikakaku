<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>品名</label>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <label>数量</label>
    <%= form.number_field :quantity, min: 1, value: @product.quantity.present? ? @product.quantity : 1  %>個
  </div>

  <div class="field">
    <label>重量</label>
    <%= form.number_field :weight, min: 0, step: 0.01, value: @product.weight.present? ? @product.weight : 1 %>
  </div>

  <div class="field">
    <label>単位</label>
    <%= form.select :unit, ['kg', 'L'], { include_blank: '単位を選択してください' } %>
  </div>

  <div class="field">
    <label>税抜金額</label>
    <%= form.number_field :non_taxed_price, min: 0, value: @product.non_taxed_price.present? ? @product.non_taxed_price : '' %>
  </div>

  <div class="field">
    <label>税込金額</label>
    <%= form.number_field :price, min: 0, value: @product.price.present? ? @product.price : '' %>
  </div>

  <div class="field">
    <label>送料</label>
    <%= form.number_field :shipping_fee, min: 0, value: @product.shipping_fee.present? ? @product.shipping_fee : 0 %>
  </div>

  <div class="field">
    <label>ポイント</label>
    <%= form.number_field :point, min: 0, value: @product.point.present? ? @product.point : 0 %>
  </div>

  <div class="field">
    <label>ストア</label>
    <%= form.text_field :store %>
  </div>

  <div class="field">
    <label>URL</label>
    <%= form.text_field :url %>
  </div>

  <div class="field">
    <label>備考</label>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit value: '登録' %>
  </div>
<% end %>
